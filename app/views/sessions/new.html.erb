<h1>Signin</h1>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div><br>
  <% end %>

<%= form_tag sessions_path, {:method => :post} do %>
	<%= collection_select(:user, :name, User.all, :name, :name, :prompt => true) %>
	<%= text_field_tag :password, '', :placeholder => "password" %>
	<%= submit_tag "Sign In" %>
<% end %>
